<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:paddingLeft="64dp"
                android:paddingRight="12dp"
                tools:background="#ffaa00">

    <ImageView
        android:id="@+id/iv_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bg_temperature"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_icon"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_circle"
        android:src="@drawable/clear_day"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>

    <TextView
        android:id="@+id/tv_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Satarday"
        android:layout_toRightOf="@id/iv_icon"
        android:textColor="@android:color/white"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/tv_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="100"
        android:layout_alignTop="@id/iv_circle"
        android:layout_alignBottom="@id/iv_circle"
        android:layout_alignLeft="@id/iv_circle"
        android:layout_alignRight="@id/iv_circle"
        android:gravity="center"
        android:textColor="#f25019"/>

</RelativeLayout>